<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_button"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_marginTop="5dp"

                android:id="@+id/imageViewProfilePic"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/eniversity" />
            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/textViewUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/Gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dip"
                android:background="@color/appcolor"
                android:visibility="gone"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/linearLayoutYOurCourse"


                    android:layout_width="45dp"
                    android:layout_height="45dp"

                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_your_course"

                    />

                <ImageView
                    android:layout_marginTop="-3dp"
                    android:id="@+id/linearLayoutEditProfile"
                    android:layout_width="52dp"
                    android:layout_height="52dp"

                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit"
                    android:visibility="visible" />

                <ImageView

                    android:id="@+id/linearLayoutLogout"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_power_settings_new_3x" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dip"

                android:background="@color/DarkGray"></View>
            <LinearLayout
                android:id="@+id/linearLayoutExploreCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_book_icon" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Explore Courses"
                    android:textStyle="bold"
                    android:textColor="@color/Gray"
                    android:textSize="16sp"
                    android:id="@+id/textView3" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutBrowse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"

                    android:src="@drawable/ic_browse" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textStyle="bold"

                    android:text="Browse Courses"
                    android:textColor="@color/Gray"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutToppers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"

                android:orientation="horizontal">


                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_topper"
                    android:id="@+id/imageView" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="-3dp"
                    android:textStyle="bold"

                    android:text="Toppers"
                    android:textColor="@color/Gray"
                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutEditRecCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_categories_icon_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"

                    android:textStyle="bold"


                    android:text="My Categories"
                    android:textColor="@color/Gray"
                    android:textSize="16sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutSubScription"
                android:layout_width="469dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_weight="0.31">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_description_black_36dp" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="-2dp"

                    android:text="Subscriptions"
                    android:textColor="@color/Gray"
                    android:textSize="16sp"
                    android:id="@+id/textView5" />


            </LinearLayout>





            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="@color/DarkGray"
                android:visibility="visible"></View>



            <LinearLayout
                android:id="@+id/linearLayoutAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/ic_about" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="3dp"

                    android:text="About"
                    android:textColor="@color/Gray"
                    android:textSize="16sp"
                    android:id="@+id/textView4" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/ic_faq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="3dp"

                    android:textStyle="bold"

                    android:text="FAQ"
                    android:textColor="@color/Gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout

                android:id="@+id/linearLayoutContactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="4dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_contact" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Contact Us"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/Gray"
                    android:textSize="16sp"
                    android:id="@+id/textView6" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logout_ic" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="3dp"
                    android:text="Login"
                    android:textColor="@color/Gray"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
