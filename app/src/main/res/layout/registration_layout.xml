<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_all"

        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:maxWidth="72dp"
                    android:maxHeight="72dp"
                    android:scaleType="fitCenter"
                    android:id="@+id/imageButtonCloseRegisterUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:adjustViewBounds="true"
                    android:src="@drawable/backclose" />

                <LinearLayout
                    android:id="@+id/layoutloadReagistation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/textViewRegister"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="30dp"
                            android:gravity="center"
                            android:text="Registration"
                            android:textColor="@color/appcolor"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/textViewUpdate"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="30dp"
                            android:gravity="center"
                            android:text="Profile"
                            android:textColor="@color/appcolor"
                            android:textSize="26sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/editTextUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/DarkGray"

                        android:background="@drawable/round_corner"
                        android:hint="First Name"
                        android:inputType="textCapWords"
                        android:padding="10dp"
                        android:textColor="@color/textDarkColor" />


                    <EditText
                        android:id="@+id/editTextUserEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/DarkGray"
                        android:background="@drawable/round_corner"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="@color/textDarkColor" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_corner"
                        android:weightSum="1">
                        <EditText
                            android:id="@+id/editTextUserPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.9"
                            android:background="@drawable/round_corner"
                            android:gravity="left"
                            android:hint="Password"
                            android:textColorHint="@color/DarkGray"
                            android:inputType="textPassword"
                            android:padding="10dp"
                            android:textColor="@color/textDarkColor"
                            android:textSize="17dp" />

                        <!--<ToggleButton
                            android:id="@+id/toggleButton_ShowPass"
                            android:layout_width="40dp"
                            android:layout_height="43dp"
                            android:layout_weight="0.3"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:textOff="SHOW"
                            android:textOn="HIDE"
                            android:visibility="gone"
                            android:textSize="15dp" />-->
                        <CheckBox
                            android:id="@+id/checkBoxVisiblePassword"
                            android:layout_width="wrap_content"
                            android:layout_height="43dp"
                            android:layout_weight="0.1"
                            android:visibility="gone"
                            android:button="@drawable/login_password_visible"
                            android:background="@android:color/transparent"
                            android:gravity="center" />
                    </LinearLayout>

                    <!--<EditText
                        android:id="@+id/editTextUserConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/round_corner"
                        android:hint="Confirm password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="@color/textDarkColor" />-->


                    <EditText
                        android:id="@+id/editTextUserPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_corner"
                        android:hint="Phone"
                        android:textColorHint="@color/DarkGray"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:padding="10dp"
                        android:textColor="@color/textDarkColor" />

                  <!--  <EditText
                        android:id="@+id/editTextUserLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_corner"
                        android:hint="Address"
                        android:textColorHint="@color/DarkGray"
                        android:inputType="textCapSentences"
                        android:padding="10dp"
                        android:textColor="@color/textDarkColor" /> -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_corner"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/editTextUserDateOfBirth"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.9"
                            android:background="@drawable/round_corner"
                            android:gravity="left"
                            android:textColorHint="@color/DarkGray"
                            android:hint="Date of Birth(DD/MM/YYYY)"
                            android:padding="10dp"
                            android:textColor="@color/textDarkColor"

                            android:textSize="17dp" />

                   <!--     <ImageView
                            android:id="@+id/buttonSetDate"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.1"
                            android:padding="5dp"
                            android:src="@drawable/calendar_icon" /> -->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewTakeImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_corner"
                        android:hint="Enter Date of birth"
                        android:padding="15dp"
                        android:text="Pick/Take Photo"
                        android:textAlignment="center"
                        android:textColor="@color/DarkGray"
                        android:textStyle="bold" />

                         <RelativeLayout
                        android:id="@+id/relativeLayoutImageUpload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="20dp"
                             android:gravity="center"
                             android:layout_gravity="center"
                             android:layout_marginTop="10dp"

                        android:visibility="gone">
<!--
                        <ImageView
                            android:id="@+id/imageViewUploadImage"
                            android:layout_width="300dp"
                            android:layout_height="300dp"


                            android:layout_gravity="center_horizontal"
                            />-->

                             <ImageView
                                 android:id="@+id/imageViewUploadImage"
                                 android:layout_width="300dp"
                                 android:layout_height="300dp"

                                 android:padding="10dp"

                                 android:layout_gravity="center"
                                 />

                        <ImageButton
                            android:id="@+id/imageButtonCloseImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="30dp"
                            android:maxHeight="30dp"
                            android:scaleType="fitStart"
                            android:adjustViewBounds="true"


                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="20dp"
                           android:layout_marginTop="-10dp"
                            android:layout_marginRight="-5dp"
                            android:layout_alignRight="@+id/imageViewUploadImage"
                            android:background="#00000000"


                            android:src="@drawable/close" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <Button
                            android:id="@+id/buttonRegisterNewUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/green_round_cornar"
                            android:text="Submit"
                            android:textColor="@color/White" />

                    </RelativeLayout>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressbarLoadRegistration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="250dp"
                    android:indeterminateTint="@color/RoyalBlue"
                    android:visibility="gone" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>