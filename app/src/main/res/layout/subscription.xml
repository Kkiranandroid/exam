<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutsubscribedProjectOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/White"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="90dp"
            android:layout_height="90dp">

        <ImageView
            android:id="@+id/imageViewsubscribeOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView

                android:id="@+id/textViewSubscribedScoursename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Agile"

                android:textColor="@color/textDarkQuoteColor"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/textViewTxnId"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="123456"
                android:layout_marginRight="6dp"

                android:textColor="@color/appcolor"

                />
            <TextView
                android:layout_marginTop="3dp"

                android:id="@+id/textViewLevels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Easy, Int, Adv "

                android:textColor="@color/Gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewSubscribedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Subscribed on: "
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/textViewSubscribedScourseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="18th jan 2016"

                    android:textColor="@color/Red"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <TextView
                android:id="@+id/transcAmtTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="6dp"
                android:text="$10000"
                android:textColor="@color/appcolor" />





            <TextView
                android:id="@+id/textViewSubscribedScoursePercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:text="76"
                android:textColor="@color/Red"
                android:textSize="16dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>