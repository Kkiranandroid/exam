<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/White"
   >

   <!-- <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
     >-->


    <LinearLayout
        android:paddingBottom="10dp"
        android:background="@drawable/cardview_border"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <ImageView
                android:maxHeight="87dp"

                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:id="@+id/imageViewExploreCourse"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:src="@drawable/image_2"
                android:layout_height="87dp"

                 />
        </LinearLayout>


        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/textViewCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:lines="1"
            android:singleLine="true"
            android:ellipsize="end"

            android:text="Demo"
            android:textStyle="bold"
            android:textColor="@color/textDarkQuoteColor"
            android:textSize="16sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewCoursePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:text="Courses"
                android:textColor="@color/appcolor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCoursePriceProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/appcolor"
                android:textSize="12sp"
                android:text="35"

android:layout_marginLeft="4dp"
                android:textStyle="bold"


                android:layout_toRightOf="@+id/textViewCoursePrice"
                android:layout_toEndOf="@+id/textViewCoursePrice" />


        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/usersrelativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

               >
        <TextView
            android:id="@+id/textViewCourseUsersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="12sp"
android:layout_marginLeft="5dp"
            android:text="Users "
            android:textColor="@color/Gray"
            android:textStyle="bold" />


            <TextView

                android:id="@+id/textViewCourseUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="9398"

                android:textColor="@color/appcolor"
                android:textSize="12sp"
                android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->


</FrameLayout>