<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_all"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



        <ImageButton
            android:maxWidth="72dp"
            android:maxHeight="72dp"
            android:scaleType="fitCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonCloseLogin1"
            android:adjustViewBounds="true"
        android:src="@drawable/backclose"
        android:background="#00000000"
        />




</LinearLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewRegisterUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Login"
            android:layout_gravity="center"
            android:textColor="@color/appcolor"
            android:textSize="26sp"


            />

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_centerInParent="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">




                <EditText
                    android:id="@+id/editTextUserEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"


                    android:textColorHint="@color/DarkGray"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_corner"
                    android:textColor="@color/Black" />





<LinearLayout
    android:layout_marginTop="30dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:background="@drawable/round_corner">
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/editTextUserEmailPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/DarkGray"
                    android:padding="10dp"
                    android:background="@drawable/round_corner"


                    android:textColor="@color/Black" />

   <!-- <EditText
        android:layout_weight="0.9"
        android:id="@+id/editTextUserEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"

android:layout_gravity="center"
        android:textColorHint="@color/DarkGray"
        android:inputType="textEmailAddress"
        android:padding="10dp"


        android:background="@drawable/round_corner"
        android:textColor="@color/Black" />-->
    <CheckBox
        android:id="@+id/checkBoxVisiblePassword1"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_weight="0.1"
        android:visibility="gone"
        android:button="@drawable/login_password_visible"
        android:background="@android:color/transparent"
        android:gravity="center" />
</LinearLayout>





            <Button
                    android:id="@+id/buttonUserLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/green_round_cornar"
                    android:text="Login"
                    android:padding="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:textColor="@color/White" />




        </LinearLayout>

    </ScrollView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>