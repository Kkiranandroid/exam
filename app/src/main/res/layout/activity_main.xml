<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="40dp"

                android:id="@+id/textViewExamofy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="ENIVERSITY"
                android:textColor="@color/appcolor"
                android:textSize="26sp" />
            <RelativeLayout
                android:id="@+id/relativeLayoutExamofyTextValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewExamofy">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/textViewEvaluate"
                    android:layout_toStartOf="@+id/textViewEvaluate"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="Learn"
                    android:textColor="#ff9900"/>

                <TextView
                    android:id="@+id/textViewEvaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="Evaluate"
                    android:textColor="#ff9900" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/textViewEvaluate"
                    android:layout_toRightOf="@+id/textViewEvaluate"
                    android:padding="10dp"

                    android:text="Excel"
                    android:textColor="#ff9900" />

            </RelativeLayout>


            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/imageButtonFacebookIcon"
                    android:layout_margin="10dp"
                    android:background="@color/appcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:background="@color/appcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_facebook"/>
                    <View
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="2.0dp"
                        android:padding="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"></View>
                    <TextView
                        android:textSize="17sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="Sign in with Facebook"
                       android:paddingLeft="15dp"
                        android:paddingTop="5dp"

                        android:background="@color/appcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/imageButtonTwitterIcon"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@color/appcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:background="@color/appcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_twitter"/>
                    <View
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="2.0dp"
                        android:padding="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"></View>
                    <TextView
                        android:textSize="17sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="Sign in with Twitter"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"

                        android:background="@color/appcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/imageButtonGooglePlus"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@color/appcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:background="@color/appcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_google_plus"/>
                    <View
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="2.0dp"
                        android:padding="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"></View>
                    <TextView
                        android:textSize="17sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="Sign in with Google+"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"

                        android:background="@color/appcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/imageButtonLoginToApp"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:background="@color/appcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView

                        android:background="@color/appcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mail"/>
                    <View
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="2.0dp"
                        android:padding="10dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"></View>
                    <TextView
                        android:textSize="17sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="Sign in with Email"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"

                        android:background="@color/appcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>



            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/buttonExplore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    android:text="EXPLORE"
                    android:textColor="#ff9900"
                    android:textSize="29sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    android:text="Sign Up"
                    android:textStyle="bold"
                    android:textColor="@color/appcolor"
                    android:textSize="29sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
